<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66D39523"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/adminNameView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="32dp"

        android:accessibilityLiveRegion="polite"
        android:text="Hello here we  give help to people with  their cars when they met with accident.If you need our help you ca call a garage which is nearest you.                                        Login or create new account for help. Thank you!!!"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        android:text="Enter"
        android:textColor="#FBFBFB"
        app:layout_constraintBottom_toTopOf="@+id/creatNewAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminNameView" />

    <Button
        android:id="@+id/creatNewAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="Create New Account"
        android:textColor="#FBFBFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>